# 관리자 센터 디렉토리 인덱스 설정
DirectoryIndex index.php

# PHP 파일 직접 접근 허용
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # .php 확장자 없이 접근 가능하도록 설정
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME}.php -f
    RewriteRule ^(.+)$ $1.php [L]
</IfModule>
